// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "sqlite"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

model TwitterUser {
    id        String   @id @default(cuid())
    handle    String
    externalUserId String @unique
    userInfoData Json?
    tweets    Tweet[] @relation("TwitterUserTweets")
    latestTweetsQueries LatestTweetsQuery[]
    reports   Report[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model LatestTweetsQuery {
    cursor      String
    fetchedAt   DateTime

    twitterUser   TwitterUser @relation(fields: [twitterUserId], references: [id])
    twitterUserId String

    tweets       Tweet[]
    responseData Json

    @@id([cursor, twitterUserId])
}

model Tweet {
    id            String      @id @default(cuid())
    twitterUser   TwitterUser @relation("TwitterUserTweets", fields: [twitterUserId], references: [id])
    twitterUserId String

    latestTweetsQuery LatestTweetsQuery @relation(fields: [latestTweetsQueryCursor, twitterUserId], references: [cursor, twitterUserId])
    latestTweetsQueryCursor String

    tweetId       String      @unique
    tweetUrl      String?
    likeCount     Int         @default(0)
    retweetCount  Int         @default(0)
    quoteCount    Int         @default(0)
    replyCount    Int         @default(0)
    viewCount     Int         @default(0)
    tweetCreatedAt DateTime
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
}

model TezosWallet {
    id        String   @id @default(cuid())
    address   String   @unique
    reports   Report[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Report {
    id            String      @id @default(cuid())
    publicId      String      @unique
    email         String
    startGenerationCode String @unique
    showFullReport Boolean @default(false)
    workflowId    String?
    syncedTweetsAt DateTime?
    syncedBlockchainAt DateTime?
    workflowFailedAt DateTime?
    completedAt DateTime?
    twitterUser   TwitterUser @relation(fields: [twitterUserId], references: [id])
    twitterUserId String
    tezosWallet   TezosWallet @relation(fields: [tezosWalletId], references: [id])
    tezosWalletId String
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    passwordHash  String?
    passwordSalt  String?
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
